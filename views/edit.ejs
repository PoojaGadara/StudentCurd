<%- include('./partials/header.ejs') %>

    <div class="container">
        <div class="row">
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-success text-center">Update Student</h2>
               
                <form method="post" action="/student/update/<%= data._id %> ">
                    <div class="mb-3">
                      <label class="form-label">Name</label>
                      <input type="text" class="form-control" id="Name" name="Name" value="<%= data.Name %>">
                    </div>
                    <div class="mb-3">
                      <label class="form-label">Age</label>
                      <input type="text" class="form-control" name="Age" id="age" value="<%= data.Age %>" >
                    </div>
                    <div class="mb-3">
                        <label  class="form-label">Fee</label>
                        <input type="text" class="form-control" name="Fees" id="fee" value="<%= data.Fees %>" >
                      </div>
                      <button type="submit" class="btn btn-secondary">Update</button>
                    <button type="submit" class="btn btn-secondary">Back</button>
                  </form>
                 
            </div>
        </div>
    </div>
<%- include('./partials/footer.ejs') %>   